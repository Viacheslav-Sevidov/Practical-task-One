#include <stdio.h>

int countNumbers(int r) 
{
    if (r == 1) return 2; // "5" і "9"
    if (r == 2) return 4; // "55", "59", "95", "99"

    int dp[r + 1][4];

    dp[1][0] = 1; // "5"
    dp[1][1] = 1; // "9"
    dp[1][2] = 0;
    dp[1][3] = 0;
    
    dp[2][0] = 1; // "55"
    dp[2][1] = 1; // "99"
    dp[2][2] = 1; // "59"
    dp[2][3] = 1; // "95"
    
    for (int i = 3; i <= r; i++) 
    {
        dp[i][0] = dp[i-1][2]; // Числа довжини i, що закінчуються на "5"
        dp[i][1] = dp[i-1][3]; // Числа довжини i, що закінчуються на "9"
        dp[i][2] = dp[i-1][0] + dp[i-1][1]; // Числа довжини i, що закінчуються на "59" або "95"
        dp[i][3] = dp[i-1][0] + dp[i-1][1]; // Числа довжини i, що закінчуються на "59" або "95"
    }

    return dp[r][0] + dp[r][1] + dp[r][2] + dp[r][3];
}

int main() 
{
    int r;
    printf("Введіть довжину чисел: ");
    scanf("%d", &r);

    if (r <= 0 || r > 30) 
    {
        printf("Довжина чисел повинна бути в межах від 1 до 30\n");
        return 1;
    }

    int result = countNumbers(r);
    printf("Кількість чисел довжиною %d розрядів: %d\n", r, result);

    return 0;
}
